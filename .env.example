# Enhanced Streamlit User Management System
# Environment Configuration Template

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
APP_NAME="User Management System"
APP_VERSION="2.0.0"

# =============================================================================
# DATABASE CONFIGURATION (Supabase)
# =============================================================================
# Get these from your Supabase project settings
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# =============================================================================
# AUTHENTICATION SETTINGS
# =============================================================================
SESSION_TIMEOUT_HOURS=24
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
REQUIRE_EMAIL_VERIFICATION=true
REQUIRE_ADMIN_APPROVAL=false

# =============================================================================
# RATE LIMITING
# =============================================================================
API_RATE_LIMIT_PER_HOUR=1000
TOKEN_RATE_LIMIT_PER_HOUR=10000
FILE_UPLOAD_LIMIT_MB=100

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_USER_REGISTRATION=true
ENABLE_2FA=true
ENABLE_AUDIT_LOGGING=true
ENABLE_ANALYTICS=true
MAINTENANCE_MODE=false

# =============================================================================
# UI/UX SETTINGS
# =============================================================================
THEME_PRIMARY_COLOR=#4caf50
THEME_BACKGROUND_COLOR=#f1f8e9
ITEMS_PER_PAGE=10

# =============================================================================
# EMAIL CONFIGURATION (Optional - for notifications)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@yourapp.com

# =============================================================================
# FILE STORAGE SETTINGS
# =============================================================================
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,txt,csv

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# =============================================================================
# CACHE SETTINGS
# =============================================================================
CACHE_TTL_SECONDS=300
ENABLE_CACHING=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=*
SECURE_COOKIES=false

# =============================================================================
# SUBSCRIPTION TIER LIMITS
# =============================================================================
# Free Tier
FREE_MONTHLY_TOKENS=10000
FREE_MAX_FILES=5
FREE_MAX_THREADS=10
FREE_MAX_ASSISTANTS=2
FREE_API_REQUESTS_PER_HOUR=100

# Pro Tier
PRO_MONTHLY_TOKENS=100000
PRO_MAX_FILES=50
PRO_MAX_THREADS=100
PRO_MAX_ASSISTANTS=10
PRO_API_REQUESTS_PER_HOUR=1000

# Enterprise Tier
ENTERPRISE_MONTHLY_TOKENS=1000000
ENTERPRISE_MAX_FILES=500
ENTERPRISE_MAX_THREADS=1000
ENTERPRISE_MAX_ASSISTANTS=50
ENTERPRISE_API_REQUESTS_PER_HOUR=10000

# =============================================================================
# DEVELOPMENT SETTINGS (Only for development environment)
# =============================================================================
# Set to true to enable development features
DEV_SKIP_EMAIL_VERIFICATION=false
DEV_AUTO_APPROVE_USERS=false
DEV_SHOW_DEBUG_INFO=true

# =============================================================================
# PRODUCTION SETTINGS (Only for production environment)
# =============================================================================
# These should be set in production
# PROD_SECRET_KEY=your_production_secret_key
# PROD_DATABASE_URL=your_production_database_url
# PROD_REDIS_URL=your_production_redis_url

# =============================================================================
# ANALYTICS AND MONITORING (Optional)
# =============================================================================
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
# SENTRY_DSN=your_sentry_dsn
# MIXPANEL_TOKEN=your_mixpanel_token

# =============================================================================
# THIRD-PARTY INTEGRATIONS (Optional)
# =============================================================================
# OPENAI_API_KEY=your_openai_api_key
# STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
# STRIPE_SECRET_KEY=your_stripe_secret_key
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token

# =============================================================================
# BACKUP AND STORAGE (Optional)
# =============================================================================
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=your_s3_bucket_name
# AWS_REGION=us-east-1

# =============================================================================
# NOTES
# =============================================================================
# 1. Copy this file to .env and fill in your actual values
# 2. Never commit .env file to version control
# 3. Use strong, unique passwords and keys in production
# 4. Regularly rotate API keys and secrets
# 5. Enable 2FA for all admin accounts in production
# 6. Set SECURE_COOKIES=true in production with HTTPS
# 7. Restrict CORS_ORIGINS to your actual domains in production
